{% extends 'base/site.html' %}
{% block title %}
	{{app.name}}
	{{app.version}}
{% endblock %}
{% block page %}
{% from 'macros/macros.twig' import userBadge %}
<h1 class="text-4xl font-bold">Admin Roster</h1>
<hr class="border-gray-300 dark:border-gray-700 mt-2 mb-4">
<table class="border-collapse relative">
  <thead>
    <tr>
      <th class="sticky top-0 align-bottom">Admin</th>
      <th class="sticky top-0 align-bottom">Feedback</th>
      {% for p in perms|keys %}
      <th class="sticky top-0 text-right align-text-bottom"><span class="transform rotate-180" style="writing-mode: vertical-lr">{{p}}</span></th>
      {% endfor %}
    </tr>
  </thead>
  <tbody>
    {% for admin in admins %}
      <tr>
        <td>
        {{userBadge(admin)}}
        </td>
        <td>{% if admin.feedback %}<a href="{{admin.feedback}}" class="link" target="_blank" rel="noopener noreferrer">Feedback</a>{% endif %}</td>
        {% for name, bits in perms %}
          {% if admin.flags b-and bits %}
          <td class="bg-green-100 text-center text-green-700 text-lg leading-none" data-toggle="tooltip" title="{{admin.ckey}} has {{name}}"><i class="far fa-check-circle"></i></td>
          {% else %}
          <td class="bg-red-100 text-center text-red-700 text-lg leading-none" data-toggle="tooltip" title="{{admin.ckey}} does not have {{name}}"><i class="far fa-times-circle"></i></td>
          {% endif %}
        {% endfor %}
      </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
