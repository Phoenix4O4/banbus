{% extends 'base/site.html' %}
{% block title %}
	{{app.name}}
	{{app.version}}
{% endblock %}
{% block page %}
	{% if not user and modules.personal_bans %}
		<div class="border-2 border-gray-200 rounded-lg p-4">
			<p class="text-2xl">This application will allow you to view any active, expired, and lifted bans against your Byond account on TGStation servers.</p>
			<p class="text-lg mt-4">In order to continue, you'll need to log into
				<strong>{{app.name}}</strong>
				with your TGStation forum account. Your Byond username (ckey)
				<strong>must</strong>
				be linked to your forum account.
				<br><a href=" https://tgstation13.org/phpBB/linkbyondaccount.php" target=" _blank" rel=" noopener noreferrer" class="text-blue-600 hover:text-blue-900">See here for information on linking your Byond account
					<i class="fas fa-external-link-alt"></i>
				</a>
			</p>
			<p class="bg-blue-200 p-2 border-2 border-blue-400 rounded-md font-mono my-4">
				<strong>{{app.name}}</strong>
				will access your Byond username (ckey) only. No other information,
				<em>including any passwords</em>
				will be shared with
				{{app.name}}.</p>
			<a class="bg-green-400 hover:bg-green-800 ring-2 ring-green-600 block p-4 text-white text-center text-6xl font-extrabold tracking-widest uppercase rounded-lg" href="{{url_for('auth')}}">Continue</a>
		</p>
	</div>
	{% endif %}

{% endblock %}
