{% extends 'base/site.html' %}
{% block title %}
	{{app.name}}
	{{app.version}}
{% endblock %}
{% block page %}
	{% from 'macros/macros.twig' import userBadge %}
	<h2 class="text-4xl inline">{{userBadge(player.userData)}}</h2>
	<span>Last seen
		<time>{{player.lastseen}}</time>
		|
		<a class="link" href="http://www.byond.com/members/{{player.ckey}}" target="_blank" rel="noopener noreferrer">
			<i class="fas fa-external-link-alt"></i>
			Byond</a>
		|
		<a class="link" href="https://tgstation13.org/tgdb/playerdetails.php?ckey={{player.ckey}}" target="_blank" rel="noopener noreferrer">
			<i class="fas fa-external-link-alt"></i>
			tgdb</a>
		|
		<a class="link" href="https://scrubby.melonmesa.com/ckey/{{player.ckey}}" target="_blank" rel="noopener noreferrer">
			<i class="fas fa-external-link-alt"></i>
			Scrubby</a>
		<hr class="border-gray-300 dark:border-gray-700 mb-3 mt-2">
		<nav class="grid md:grid-cols-4 gap-2">
			<a href="{{url_for('tgdb.player.tickets',{ckey: player.ckey})}}" class="link hover:bg-gray-50 dark:hover:bg-gray-800 p-3 border border-gray-300 dark:border-gray-700 rounded-lg text-center font-bold flex items-center justify-between">
				<span>Tickets</span>
				<i class="fas fa-ticket-alt"></i>
			</a>
			<a class="link:disabled p-3 border border-gray-300 dark:border-gray-700 rounded-lg text-center font-bold flex items-center justify-between">
				<span>Messages</span>
				<i class="fas fa-envelope-open-text"></i>
			</a>
			<a class="link:disabled p-3 border border-gray-300 dark:border-gray-700 rounded-lg text-center font-bold flex items-center justify-between">
				<span>Bans</span>
				<i class="fas fa-ban"></i>
			</a>
			<a class="link:disabled p-3 border border-gray-300 dark:border-gray-700 rounded-lg text-center font-bold flex items-center justify-between">
				<span>Rounds</span>
				<i class="fas fa-circle"></i>
			</a>
		</nav>
	{% endblock %}
