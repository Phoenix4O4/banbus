{% extends 'base/site.html' %}
{% block title %}
	{{app.name}}
	{{app.version}}
{% endblock %}
{% block page %}
<div class="text-2xl py-4">Ticket #{{tickets[0].ticket}} from <a href="https://sb.atlantaned.space/rounds/{{tickets[0].round}}" class="text-blue-400 hover:text-blue-800" target="_blank" rel="noopener noreferrer">
			<i class="fas fa-circle"></i>
			{{tickets[0].round}}
			<i class="fas fa-external-link-alt"></i>
		</a>
</div>
<hr class="mb-4">
<div class="flex flex-col relative">
<div class="border-r-4 border-gray-300 dark:border-gray-700 absolute top-0 bottom-5 left-4 z-0"></div>
{% for ticket in tickets %}
{% if ticket.interval %}<p class="text-right mb-2 font-mono text-pink-500"><i class="fas fa-stopwatch"></i> {{ticket.interval}}</p>{% endif %}
{% if ticket.isAction %}
{% include 'tickets/components/action.twig' %}
{% else %}
	<div href="#" class="border block relative overflow-hidden p-2 pt-12 rounded mb-2 z-10 bg-white dark:bg-gray-800 {% switch ticket.class %}
		{% case 'success' %}
		border-green-500
		{% case 'warning' %}
		border-yellow-500
		{% case 'danger' %}
		border-red-500
		{% case 'info' %}
		border-blue-500
    {% case 'secondary' %}
		border-black
		{% endswitch %}">
  <div class="text-lg inset-x-0 top-0 p-2 absolute border-b bg-gray-50 dark:bg-gray-700 {% switch ticket.class %} 
		{% case 'success' %}
		border-green-500
		{% case 'warning' %}
		border-yellow-500
		{% case 'danger' %}
		border-red-500
		{% case 'info'  %}
		border-blue-500
    {% case 'secondary' %}
		border-black
		{% endswitch %}"><i class="fas fa-fw fa-{{ticket.icon}} {% switch ticket.class %}
		{% case 'success'  %}
		text-green-500
		{% case 'warning' %}
		text-yellow-500
		{% case 'danger' %}
		text-red-500
		{% case 'info' %}
		text-blue-500
		{% endswitch %}"></i> 
    {% include 'tickets/components/ticket_header.twig' %}
    </div>
    <p class="mx-5 py-2">{{ticket.message}}</p>

	</div>
  {% endif %}
{% endfor %}
</div>
{% endblock %}
